@model IEnumerable<PayPalDemo.ViewModels.UserVM>

@{
    ViewData["Title"] = "User Roles";
}
<h1>User Roles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>
                <a asp-action="Create">Create New User Roles</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink(
                "View Roles"
                , "Detail"
                , new { userName = item.Email })
                </td>
            </tr>
        }
    </tbody>
</table>
